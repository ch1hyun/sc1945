<!doctype html>
<html class="h-100">
	<head>
		<%- include('../parts/head.ejs'); -%>
		<style>
			tbody td {
				height: 120px;
			}
		</style>
	</head>
	<body class="d-flex h-100 text-white text-center bg-dark">
		<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
				<%- include('../parts/header.ejs'); -%>
				<main class="py-3">
					<div class="container-md">
						<div class="bd-callout bd-callout-warning">
							<table class="table table-light table-bordered">
								<thead>
									<tr>
										<th colspan="7" scope="col"><%= schedule.year %></th>
									</tr>
									<tr>
									<% for(let date of Object.keys(schedule.schedules)) { %>
										<th scope="col"><%= date %></th>
									<% } %>
									</tr>
									<tr>
										<th scope="col">일</th>
										<th scope="col">월</th>
										<th scope="col">화</th>
										<th scope="col">수</th>
										<th scope="col">목</th>
										<th scope="col">금</th>
										<th scope="col">토</th>
									</tr>
								</thead>
								<tbody>
									<tr>
									<% for(let date of Object.keys(schedule.schedules)) { %>
										<td>
											<ul class="list-group">
											<% if(schedule.schedules[date] === null) { continue; } %>
											<% for(let i = 0; i < schedule.schedules[date].length; ++i) { %>
												<li class="list-group-item"><%= date[i].content %></li>
											<% } %>
											</ul>
										</td>
									<% } %>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</main>
				<footer class="mb-auto"></footer>
			</div>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>
