<!doctype html>
<html class="h-100">
	<head>
		<%- include('./parts/head.ejs'); -%>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
	</head>
	<body class="d-flex h-100 text-white text-center bg-dark">
		<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
			<header class="mb-auto">
			</header>
			<main class="py-3">
				<div class="container-md">
					<div class="bd-callout bd-callout-warning">
						<form action="/user/login" method="POST">
							<div class="form-floating">
								<input type="text" class="form-control bg-secondary" name="sc_id" id="floatingInput" placeholder="Id">
								<label for="floatingInput">Id</label>
							</div>
							<div class="form-floating">
								<input type="password" class="form-control bg-secondary" name="sc_pw" id="floatingPassword" placeholder="Password">
								<label for="floatingPassword">Password</label>
							</div>

							<div class="checkbox mb-3">
								<input type="checkbox" id=" sc_rm" name="sc_rm" value="remember-me">
								<label for="sc_rm">Remember me</label>
							</div>
							<button class="w-100 btn btn-lg btn-primary bg-warning" type="submit">Login</button>
						</form>
					</div>
				</div>
			</main>
			<footer class="mb-auto"></footer>
		</div>
</body>
</html>
