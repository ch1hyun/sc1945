<!doctype html>
<html class="h-100">
	<head>
		<%- include('./parts/head.ejs'); -%>
		<script src="/js/typer.min.js"></script>
		<style>
			.b {
				border: solid 1px black;
			}
		</style>
		<script>
			$(document).ready(function() {
				$("#count-days").typer({
					strings: [
						"Love Forever",
						"D+ <%= countDays %>"
					],
					useCursor: true,
					typeSpeed: 100,
					backspaceSpeed: 40,
					backspaceDelay: 3000,
					repeatDelay: 2000,
					repeat:true,
					autoStart:true,
					startDelay: 100,
				});
			});
		</script>
	</head>
	<body class="d-flex h-100 text-white text-center bg-dark">
		<%- include('./parts/svg.ejs'); -%>
		<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
			<%- include('./parts/header.ejs'); -%>
			<main class="py-3">
				<div class="container-md">
					<div class="bd-callout bd-callout-warning">
						<%- include('./parts/main/schedule.ejs'); -%>
					</div>
				</div>
			</main>
			<footer class="mb-auto"></footer>
		</div>
	</body>
</html>
